<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    i3d:id="main"
    i3d:layout_width="wrap_content"
    i3d:layout_height="wrap_content"
    i3d:layout_marginBottom="10px"
    i3d:layout_marginTop="10px"
    i3d:layout_marginLeft="10px"
    i3d:layout_marginRight="10px"
    i3d:orientation="horizontal" >


   <View
        i3d:layout_width="20px"
        i3d:layout_height="match_parent"
        i3d:layout_gravity_y="center"
        i3d:ref="main@layout/separator_vertical" />


  <View
	            i3d:id="card"
	            i3d:layout_marginLeft="5px"
	            i3d:layout_marginRight="15px"
	            i3d:ref="main@layout/card" />

	<LinearLayout
		i3d:orientation="vertical"
		i3d:layout_width="wrap_content"
			i3d:layout_height="wrap_content">
	>
		<LinearLayout
			i3d:id="turnStaticZone"
			i3d:orientation="horizontal"
			i3d:layout_width="wrap_content"
			i3d:layout_height="wrap_content">
	
			<LinearLayout
				i3d:id="turnCounter"
				i3d:orientation="vertical"
				i3d:layout_width="wrap_content"
				i3d:layout_height="match_parent">
				<TextView
		        i3d:text="Brains : 5"
		        i3d:layout_marginBottom="5px"
		        i3d:layout_marginTop="10px"
		         />
		         <TextView
		        i3d:text="Technologies : 3"
		        i3d:layout_marginBottom="5px"
		        i3d:layout_marginTop="10px"
		         />
		         <TextView
		        i3d:text="Research : 1"
		        i3d:layout_marginBottom="5px"
		        i3d:layout_marginTop="10px"
		         />
		         
				</LinearLayout>
				
				<LinearLayout
				i3d:id="turnButton"
				i3d:orientation="vertical"
				i3d:layout_width="wrap_content"
				i3d:layout_height="match_parent">
				<Button
		                i3d:id="endTurnButton"
		                i3d:style="bigButton@styles"
		                i3d:layout_width="match_parent"
		                i3d:layout_height="wrap_content"
		                i3d:layout_marginBottom="0px"
		                i3d:layout_marginLeft="20px"
		                i3d:layout_marginRight="20px"
		                i3d:layout_marginTop="10px"
		                i3d:text="End turn"
		                i3d:help="newGameButtonHelp@help/mainmenu"
		                 />
				</LinearLayout>
	
		  </LinearLayout>
	 		<LinearLayout
			i3d:id="turnDynamicZone"
			i3d:orientation="vertical"
			i3d:layout_width="255px"
			i3d:layout_height="100%">
	 			<TextView
	        i3d:text="Choose to keep or discard this card."
	        i3d:layout_marginTop="5px"
	        i3d:layout_width = "match_parent"
	        i3d:gravity="center"
	        i3d:layout_marginBottom="5px"
	        i3d:font="title-bold@fonts"
	         />
	         <LinearLayout
	         i3d:orientation="horizontal"
	         i3d:layout_width="wrap_content"
	         i3d:layout_marginRight="20px"
				i3d:layout_height="wrap_content">
				<Button
		                i3d:id="keepButton"
		                i3d:style="bigButton@styles"
		                i3d:layout_width="wrap_content"
		                i3d:layout_height="wrap_content"
		                i3d:layout_marginBottom="0px"
		                i3d:layout_marginLeft="10px"
		                i3d:layout_marginRight="10px"
		                i3d:layout_marginTop="10px"
		                i3d:text="Keep"
		                i3d:help="newGameButtonHelp@help/mainmenu"
		                 />
		                 <Button
		                i3d:id="discardButton"
		                i3d:style="bigButton@styles"
		                i3d:layout_width="wrap_content"
		                i3d:layout_height="wrap_content"
		                i3d:layout_marginBottom="0px"
		                i3d:layout_marginLeft="10px"
		                i3d:layout_marginRight="10px"
		                i3d:layout_marginTop="10px"
		                i3d:text="Discard"
		                i3d:help="newGameButtonHelp@help/mainmenu"
		                 />
				</LinearLayout>
	 			
	 		</LinearLayout>
	</LinearLayout>
</LinearLayout>